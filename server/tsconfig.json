{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
